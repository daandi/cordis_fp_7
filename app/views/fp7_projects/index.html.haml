- model_class = Fp7Project
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize

=will_paginate @fp7_projects
%table.table.table-condensed
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:rcn)
      %th= model_class.human_attribute_name(:project_title)
      %th= model_class.human_attribute_name(:start_date)
      %th= model_class.human_attribute_name(:end_date)
      /%th= model_class.human_attribute_name(:duration)
      /%th= model_class.human_attribute_name(:status)
      %th= model_class.human_attribute_name(:contract_number)
      %th= model_class.human_attribute_name(:keywords)
      /%th= model_class.human_attribute_name(:date_of_signature)
      %th= model_class.human_attribute_name(:total_cost)
      %th= model_class.human_attribute_name(:total_funding)
      /%th= model_class.human_attribute_name(:entry_date)
      %th= model_class.human_attribute_name(:project_website)
      %th= model_class.human_attribute_name(:other_information)
      %th= model_class.human_attribute_name(:call)
      %th= model_class.human_attribute_name(:framework_programme)
      %th= model_class.human_attribute_name(:programme)
      %th= model_class.human_attribute_name(:project_acronym)
      /%th= model_class.human_attribute_name(:achievements)
      %th= model_class.human_attribute_name(:activity_area)
      %th= model_class.human_attribute_name(:subjects)
      /%th= model_class.human_attribute_name(:contract_type)
      %th= model_class.human_attribute_name(:general_information)
      %th= model_class.human_attribute_name(:objectives)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @fp7_projects.each do |fp7_project|
      %tr
        %td= link_to fp7_project.id, fp7_project_path(fp7_project)
        %td= fp7_project.rcn
        %td= fp7_project.project_title
        %td= fp7_project.start_date
        %td= fp7_project.end_date
        /%td= fp7_project.duration
        /%td= fp7_project.status
        %td= fp7_project.contract_number
        %td= fp7_project.keywords
        /%td= fp7_project.date_of_signature
        %td= fp7_project.total_cost
        %td= fp7_project.total_funding
        /%td= fp7_project.entry_date
        %td= fp7_project.project_website
        %td= fp7_project.other_information
        %td= fp7_project.call
        %td= fp7_project.framework_programme
        %td= fp7_project.programme
        %td= fp7_project.project_acronym
        /%td= fp7_project.achievements
        %td= fp7_project.activity_area
        %td= fp7_project.subjects
        /%td= fp7_project.contract_type
        %td= fp7_project.general_information
        %td= truncate(fp7_project.objectives)
        %td=l fp7_project.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_fp7_project_path(fp7_project), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), fp7_project_path(fp7_project), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_fp7_project_path, :class => 'btn btn-primary'

=will_paginate @fp7_projects
